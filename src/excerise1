total = 0
count = 0

while True:
    number1 = input('Enter a number: ')
    number1 = int(number1)
    if number1 == 'done':
        break
    try:
        total = total + number1
        count = count + 1
    except:
        print('Invalid Input')

average = total/count
print(total)
print(count)
print(average)
